datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model commentaires {
  id      Int       @id @default(autoincrement())
  userid  Int?
  user    user?     @relation(fields: [userid], references: [id])
  date    DateTime? @default(now())
  coments String?
  type    String?
  publie  Boolean?  @default(true)
}

model news {
  id      Int       @id @default(autoincrement())
  date    DateTime? @default(now())
  content String?
  type    String?
  order   Int?
  publie  Boolean?  @default(true)
}

model user {
  id           Int            @id @default(autoincrement())
  username     String?
  nom          String?
  prenom       String?
  email        String?
  mdp          String?
  pouvoir      String?
  createdat    DateTime?
  updatedat    DateTime?
  commentaires commentaires[]
}
